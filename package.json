{
  "name": "nexus-playground",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-orchestrated experiments built by the Nexus agent squad",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src experiments --ext .ts",
    "lint:fix": "eslint src experiments --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"experiments/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"experiments/**/*.ts\""
  },
  "keywords": [
    "nexus",
    "ai",
    "experiments",
    "snake",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.0.10",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@playwright/test": "^1.58.0",
    "three": "^0.182.0"
  }
}
